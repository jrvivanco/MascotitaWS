<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/LinearLayout_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_Mascota"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <LinearLayout
            android:id="@+id/LinearLayout_Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibtn_HuesoBlanco"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/whitebone"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/tv_Nombre"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Gato"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_Rating"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="5"
                android:textAlignment="textEnd"
                android:layout_marginLeft="16dp"
                android:textSize="20dp"
                />

            <ImageView
                android:id="@+id/iv_HuesoAmarillo"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/yellowbone"
                android:scaleType="centerInside"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>